{% set apache_conf_dir = '/etc/apache2' if kolla_base_distro in ['ubuntu', 'debian'] else '/etc/httpd' %}
{% set apache_cmd = 'apache2' if kolla_base_distro in ['ubuntu', 'debian'] else 'httpd' %}
{
    "command": "{{ apache_cmd }} -DFOREGROUND -f {{ apache_conf_dir }}/httpboot.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/httpd.conf",
            "dest": "{{ apache_conf_dir }}/httpboot.conf",
            "owner": "root",
            "perm": "0644"
        }
    ]
}
